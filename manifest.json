{
  "manifest_version": 3,
  "name": "IdeaSpark",
  "version": "0.1.0",
  "description": "一个快速记录创意和灵感的插件工具",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
    }
  },
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}